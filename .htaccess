# Enable URL Rewriting
RewriteEngine On
RewriteBase /ggn/

# Property Details Clean URLs
# Redirect /property-details/slug-name to property-details.php?slug=slug-name
RewriteRule ^property-details/([a-z0-9-]+)/?$ property-details.php?slug=$1 [L,QSA]

# Remove trailing slashes (optional, for consistency)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [L,R=301]

